<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_comic_detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_comic_detail"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/marvel_logo_nav_drawer" />

        <TextView
            android:textSize="@dimen/text_h1"
            android:textStyle="bold"
            android:id="@+id/fragment_comic_detail_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standart_padding"
            />

        <TextView
            android:id="@+id/fragment_comic_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definition"
            android:padding="@dimen/standart_padding"
            />
    </LinearLayout>
</ScrollView>
</RelativeLayout>